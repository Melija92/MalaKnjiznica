@model MalaKnjizara.Models.Autorstvo

@{
    ViewBag.Title = "Dodavanje autorstvo";
}

<h2>Dodavanje autorstva</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Autorstvo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Naziv knjige</label>
            <div class="col-md-10">
                @Html.DropDownList("KnjigaID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.KnjigaID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">OIB autora</label>
            <div class="col-md-10">
                @Html.DropDownList("AutorID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AutorID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Udio autorstva</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.UdioAutorstva, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UdioAutorstva, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
